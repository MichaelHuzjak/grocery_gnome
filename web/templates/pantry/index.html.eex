<!DOCTYPE html>
<html lang="en">
<head>
  <title>Pantry</title>
  <meta http-equiv="X-UA-Compatible" content="IE=11">
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  <link rel="stylesheet" type="text/css" href="Pantry.css">
</head>
<body>


<script>
function addFood() {
    var table = document.getElementById("pTable");
    var row = table.insertRow(1);
    var cell1 = row.insertCell(0);
    var cell2 = row.insertCell(1);
    var cell3 = row.insertCell(2);
    var cell4 = row.insertCell(3)
    cell1.innerHTML = "New Food Name";
    cell1.contentEditable = "true";
    cell2.innerHTML = "Amount/Units";
    cell2.contentEditable = "true";
    cell3.innerHTML = "N/A";
    cell3.contentEditable = "true";
    cell4.innerHTML = '<input type="button" value="Delete" onclick="deleteRow(this)"/>';
}


function deleteRow(btn) {
  var row = btn.parentNode.parentNode;
  row.parentNode.removeChild(row);
}



</script>

<div class="container">
  <h2>Pantry</h2>                                                                              
  <div class="table-responsive">          
  <table class="table table-hover table-condensed" id="pTable">
    <thead>
      <tr>
        <th>Food name</th>
        <th>Food Amount</th>
        <th>Exp. Date</th>
	<th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td contenteditable="true">Milk</td>
        <td contenteditable="true">1 gal</td>
        <td>3/21/2016</td>
	<td><input type="button" value="Delete" onclick="deleteRow(this)"/></td>
      </tr>
    </tbody>
  </table>
  </div>
  <button class="btn btn-success" onclick="addFood()">Add Food Item</button>
</div>



</body>
</html>


