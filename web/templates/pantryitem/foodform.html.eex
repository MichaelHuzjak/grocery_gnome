<%= form_for @conn, pantryitem_path(@conn, :newpantryfood), [as: :pantryitem], fn f -> %>

  <div class="form-group">
    <%= label f, :foodname, "Foodname", class: "control-label" %>
    <%= @name %>
    <%= hidden_input f, :foodname, value: @name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label f, :info, "Info", class: "control-label" %>
    <%= text_input f, :info, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label f, :unit, "Unit", class: "control-label" %>
    <%= text_input f, :unit, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label f, :pantryquantity, "Pantryquantity", class: "control-label" %>
    <%= number_input f, :pantryquantity, step: "any", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label f, :expiration, "Expiration", class: "control-label" %>
    <%= date_select f, :expiration, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label f, :monitor, "Monitor Quantity", class: "control-label" %>
    <%= checkbox f, :monitor, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label f, :baselevel, "Minimum Quantity", class: "control-label" %>
    <%= number_input f, :baselevel, class: "form-control" %>
    <%= submit "Submit" %>
<% end %>
<%= render GroceryGnome.SharedView, "navbar.html", conn: @conn %>
